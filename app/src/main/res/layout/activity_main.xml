<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layoutAll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/baby_orange"
        android:id="@+id/toolbar"
        style="@style/CenterTitle"
        android:gravity="center_vertical">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/text_back"
                style="@style/BackText"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/btn_back"
                style="@style/Seach"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/maintitlemargin"
                android:src="@drawable/main_side_menu_bar"
                android:visibility="visible"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/title_center"
            style="@style/TitleText"
            android:textStyle="bold"
            android:text="标题"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/maintitlemargin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_search"
                android:padding="@dimen/mainsearchimg"
                style="@style/Seach"
                android:src="@drawable/main_search"/>

            <ImageView
                android:id="@+id/btn_qrcode"
                style="@style/Seach"
                android:src="@drawable/btn_scan"/>
        </LinearLayout>


    </RelativeLayout>

    <cn.bingoogolapple.bgabanner.BGAViewPager
        android:id="@+id/viewPager"
        style="@style/MatchAuto"/>
</LinearLayout>


