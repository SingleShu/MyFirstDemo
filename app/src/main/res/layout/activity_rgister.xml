<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:padding="20dp">


    <LinearLayout
        android:id="@+id/layou_id"
        style="@style/MatchWrap"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_marginTop="90dp">

        <TextView
            style="@style/RgisterTitleText"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:text="身份证号" />

        <com.abings.baby.widget.ClearEditText
            android:id="@+id/input_id"
            style="@style/RgisterEditText"
            android:layout_weight="1"
            android:text="111111111111111111"
            android:hint="输入身份证号"
            android:inputType="textVisiblePassword"
            android:maxLength="20" />
    </LinearLayout>

    <LinearLayout
        style="@style/MatchWrap"
        android:layout_marginTop="98dp"
        android:orientation="horizontal">

        <TextView
            style="@style/RgisterTitleText"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:text="手机号码" />

        <com.abings.baby.widget.ClearEditText
            android:id="@+id/input_phone"
            style="@style/RgisterEditText"
            android:layout_weight="1"
            android:hint="输入手机号"
            android:inputType="phone"
            android:maxLength="20" />
    </LinearLayout>

    <LinearLayout
        style="@style/MatchWrap"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            style="@style/RgisterTitleText"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:text="短信验证" />

        <LinearLayout
            style="@style/MatchWrap"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.abings.baby.widget.ClearEditText
                android:id="@+id/input_Code"
                android:layout_weight="2"
                style="@style/RgisterEditText"
                android:hint="输入验证码"
                android:inputType="number"
                android:maxLength="8" />

            <TextView
                android:id="@+id/btn_code"
                android:text="获取验证码"
                style="@style/RgisterTitleText"
                android:layout_weight="3" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/MatchWrap"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            style="@style/RgisterTitleText"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:text="密码" />


        <com.abings.baby.widget.ClearEditText
            android:id="@+id/input_psw"
            style="@style/RgisterEditText"
            android:layout_weight="1"
            android:hint="输入密码"
            android:inputType="textPassword"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyz"
            android:maxLength="16" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_ll_easy_prompt"
        style="@style/MatchWrap"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            style="@style/RgisterTitleText"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:text="占位用的"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>


        <TextView
            style="@style/RgisterEditText"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:text="@string/pwd_easy_prompt"
            android:singleLine="true"
            android:textColor="@color/ese_orange"
            android:maxLength="16" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/register_ll_psw2"
        style="@style/MatchWrap"
        android:paddingTop="8dp"
        android:orientation="horizontal">

        <TextView
            style="@style/RgisterTitleText"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:text="确认密码" />

        <com.abings.baby.widget.ClearEditText
            android:id="@+id/input_psw2"
            style="@style/RgisterEditText"
            android:layout_weight="1"
            android:hint="再次输入密码"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyz"
            android:inputType="textPassword"
            android:maxLength="16" />
    </LinearLayout>

    <LinearLayout
        style="@style/MatchWrap"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_back"
            style="@style/RgisterText"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:text="返回" />

        <TextView
            android:id="@+id/btn_register"
            style="@style/RgisterText"
            android:layout_weight="1"
            android:text="注册" />
    </LinearLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_teacher" />

</LinearLayout>