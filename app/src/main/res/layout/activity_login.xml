<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="25dp">

    <LinearLayout
        android:id="@+id/main_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_ribot_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:src="@drawable/app_log"
                android:transitionName="@string/transition_ribot_logo" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_label_acount"
            android:layout_width="213dp"
            android:layout_height="32dp"
            android:background="#FA5746"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="3dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_login" />

            <com.abings.baby.widget.ClearEditText
                android:id="@+id/input_acount"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@drawable/shape_round_edit"
                android:hint="请填写手机号"
                android:inputType="phone"
                android:maxLength="20"
                android:padding="2dp"
                android:textSize="@dimen/text_forget_body" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_label_passwd"
            android:layout_width="213dp"
            android:layout_height="32dp"
            android:layout_marginTop="10dp"
            android:background="#F2F2F2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:padding="3dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_password" />

            <com.abings.baby.widget.ClearEditText
                android:id="@+id/input_passwd"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/shape_round_edit"
                android:hint="请填写密码"
                android:inputType="textPassword"
                android:maxLength="20"
                android:padding="5dp"
                android:password="true"
                android:textSize="@dimen/text_forget_body" />
        </LinearLayout>

        <TextView
            android:id="@+id/btn_login"
            android:layout_width="213dp"
            android:layout_height="32dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/shape_round_orgene"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="8dp"
            android:text="登入"
            android:textColor="@color/white"
            android:textSize="@dimen/text_forget_body" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="162dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_teacher" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/btn_forgetPw"
                style="@style/AutoWrap"
                android:paddingLeft="20dp"
                android:gravity="left"
                android:text="忘记密码?"
                android:textColor="@color/baby_grey"
                android:textSize="@dimen/text_forget_body" />

            <TextView
                android:id="@+id/btn_register"
                style="@style/AutoWrap"
                android:paddingRight="20dp"
                android:gravity="right"
                android:text="注册账号"
                android:textColor="@color/baby_grey"
                android:textSize="@dimen/text_forget_body" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
