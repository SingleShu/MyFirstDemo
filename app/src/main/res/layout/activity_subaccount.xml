<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:expandable="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ese_title_height"
        android:background="@color/baby_orange">

        <TextView
            android:id="@+id/btn_back"
            style="@style/BackText" />

        <TextView
            style="@style/TitleText"
            android:text="个人信息" />

        <TextView
            android:id="@+id/edit_save"
            style="@style/TitleSmallText"
            android:layout_alignParentRight="true"
            android:text="编辑" />
    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_heads"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/left_menu_header_image"
        app:civ_border_color="@color/white"
        app:civ_border_width="3dp" />


    <LinearLayout
        style="@style/MatchWrap"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <View style="@style/DivideLine" />

        <LinearLayout
            style="@style/MatchWrap"
            android:orientation="horizontal">

            <TextView
                style="@style/SmallText"
                android:text="姓名：" />

            <EditText
                android:id="@+id/input_name"
                style="@style/SmallEditText"
                android:layout_weight="1"
                android:editable="false"
                android:inputType="textVisiblePassword"
                android:maxLength="20"
                android:text="王大宝" />
        </LinearLayout>

        <View style="@style/DivideLine" />

        <LinearLayout
            style="@style/MatchWrap"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/SmallText"
                    android:text="与宝宝1关系：" />

                <EditText
                    style="@style/SmallEditText"
                    android:layout_weight="1"
                    android:inputType="textVisiblePassword"
                    android:maxLength="20"
                    android:text="请添加" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/SmallText"
                    android:text="与宝宝1关系：" />

                <EditText
                    style="@style/SmallEditText"
                    android:layout_weight="1"
                    android:inputType="textVisiblePassword"
                    android:maxLength="20"
                    android:text="请添加" />

            </LinearLayout>


        </LinearLayout>

        <View style="@style/DivideLine" />

        <LinearLayout
            android:id="@+id/birthday_layout"
            style="@style/MatchWrap"
            android:orientation="horizontal">

            <TextView
                style="@style/SmallText"
                android:text="生日：" />

            <EditText
                android:id="@+id/input_birthday"
                style="@style/SmallEditText"
                android:layout_weight="1"
                android:inputType="textVisiblePassword"
                android:maxLength="20"
                android:text="1988-01-01" />
        </LinearLayout>

        <View style="@style/DivideLine" />

        <LinearLayout
            style="@style/MatchWrap"
            android:orientation="horizontal">

            <TextView
                style="@style/SmallText"
                android:text="电话："
                android:textColor="@color/ese_grey_h" />

            <TextView
                android:id="@+id/phone"
                style="@style/SmallEditText"
                android:layout_weight="1"
                android:inputType="textVisiblePassword"
                android:text="1808888888" />
        </LinearLayout>

        <View style="@style/DivideLine" />

        <LinearLayout
            style="@style/MatchWrap"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                style="@style/SmallText"
                android:layout_marginRight="5dp"
                android:text="短信验证:" />

            <LinearLayout
                style="@style/MatchWrap"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/input_Code"
                    style="@style/SmallEditText"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="输入验证码"
                    android:maxLength="8" />

                <TextView
                    android:id="@+id/btn_code"
                    style="@style/SmallText"
                    android:layout_height="match_parent"
                    android:background="@color/ese_orange"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <View style="@style/DivideLine" />

        <LinearLayout
            style="@style/MatchWrap"
            android:orientation="horizontal">

            <TextView
                style="@style/SmallText"
                android:text="邮箱：" />

            <EditText
                android:id="@+id/input_email"
                style="@style/SmallEditText"
                android:layout_weight="1"
                android:inputType="textVisiblePassword"
                android:maxLength="20"
                android:text="alybaba@qq.com" />
        </LinearLayout>

        <View style="@style/DivideLine" />

        <LinearLayout
            android:id="@+id/addr_layout"
            style="@style/MatchWrap"
            android:orientation="horizontal">

            <TextView
                style="@style/SmallText"
                android:text="地址：" />

            <EditText
                android:id="@+id/input_addr"
                style="@style/SmallEditText"
                android:layout_weight="1"
                android:inputType="textVisiblePassword"
                android:maxLength="20"
                android:text="成都高新西区西芯大道30号" />
        </LinearLayout>

        <View style="@style/DivideLine" />

    </LinearLayout>

    <TextView
        android:id="@+id/exit"
        style="@style/MatchWrap"
        android:layout_marginTop="16dp"
        android:background="@color/baby_orange"
        android:gravity="center"
        android:padding="12dp"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="@dimen/text_large_body" />

</LinearLayout>



