<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/aboutmecontentmargin"
        android:layout_marginRight="@dimen/aboutmecontentmargin"
        android:layout_marginTop="@dimen/aboutmecontentmargin"
        android:orientation="vertical">

        <LinearLayout
            style="@style/Matchdp"
            android:orientation="horizontal">

            <TextView
                style="@style/AboutMeTextView"
                android:text="姓名："/>

            <EditText
                android:id="@+id/fmAboutMeTeacher_et_name"
                style="@style/AboutMeEditText"/>

        </LinearLayout>

        <View style="@style/DivideLine"/>

        <LinearLayout
            style="@style/Matchdp"
            android:orientation="horizontal">

            <TextView
                style="@style/AboutMeTextView"
                android:text="性别："/>

            <EditText
                android:id="@+id/fmAboutMeTeacher_et_sex"
                style="@style/AboutMeEditText"/>

        </LinearLayout>

        <View style="@style/DivideLine"/>

        <LinearLayout
            style="@style/Matchdp"
            android:orientation="horizontal">

            <TextView
                style="@style/AboutMeTextView"
                android:text="生日："/>

            <EditText
                android:id="@+id/fmAboutMeTeacher_et_birthday"
                style="@style/AboutMeEditText"/>
        </LinearLayout>

        <View style="@style/DivideLine"/>

        <LinearLayout
            style="@style/Matchdp"
            android:orientation="horizontal">

            <TextView
                style="@style/AboutMeTextView"
                android:text="电话："/>

            <EditText
                android:id="@+id/fmAboutMeTeacher_et_mobile_phone"
                style="@style/AboutMeEditText"
                android:inputType="phone"/>
        </LinearLayout>

        <View style="@style/DivideLine"/>

        <LinearLayout
            style="@style/Matchdp"
            android:orientation="horizontal">

            <TextView
                style="@style/AboutMeTextView"
                android:text="邮箱："/>

            <EditText
                android:id="@+id/fmAboutMeTeacher_et_email"
                style="@style/AboutMeEditText"/>
        </LinearLayout>

        <View style="@style/DivideLine"/>

    </LinearLayout>
</LinearLayout>



