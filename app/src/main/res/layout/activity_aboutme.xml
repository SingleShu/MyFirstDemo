<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:expandable="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        style="@style/CenterTitle"
        android:background="@color/baby_orange">

        <TextView
            android:id="@+id/btn_back"
            style="@style/BackText"/>

        <TextView
            android:id="@+id/text_title"
            style="@style/OtherTitleText"
            android:text="个人信息"/>

        <TextView
            android:id="@+id/edit_save"
            style="@style/TitleSmallText"
            android:layout_alignParentRight="true"
            android:text="编辑"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_heads"
                android:layout_width="@dimen/aboutmeheadimage"
                android:layout_height="@dimen/aboutmeheadimage"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/aboutmeheadimgtop"
                android:src="@drawable/left_menu_header_image"
                app:civ_border_color="@color/white"
                app:civ_border_width="3dp"/>

            <!--加内容-->
            <FrameLayout
                android:id="@+id/aboutme_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>



